{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "outDir": "./app/static/gen/",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false
}